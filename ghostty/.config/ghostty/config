# Ghostty Configuration
# https://ghostty.org/docs/config

# Enable shell integration for window titles
# This allows tmux to set the window title via set-titles
shell-integration-features = title

# Always start tmux with a unique session per window
# Uses timestamp to ensure each Ghostty window gets its own tmux session
command = /bin/sh -c '/opt/homebrew/bin/tmux new-session -s "ghostty-$(date +%s)"'

# Font configuration (adjust to your preference)
# font-family = "JetBrains Mono"
# font-size = 14

# Theme (uncomment to use)
# theme = tokyonight

# Window settings
# window-decoration = false
# macos-titlebar-style = hidden
window-height = 40
window-width = 120
